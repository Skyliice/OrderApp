@model Order

<form asp-controller="Home" asp-action="Add" method="post">
    <h1 class="text-center">Add new Order</h1> 
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3 mt-3">
        <label asp-for="CityOfSender" class="form-label">Sender's City:<span class="text-danger">*</span></label>
        <input type="text" class="form-control" asp-for="CityOfSender" placeholder="Enter city">
        <span class="text-danger" asp-validation-for="CityOfSender"></span>
    </div>
    <div class="mb-3 mt-3">
        <label asp-for="AddressOfSender" class="form-label">Sender's Address:<span class="text-danger">*</span></label>
        <input type="text" class="form-control" asp-for="AddressOfSender" placeholder="Enter address">
        <span class="text-danger" asp-validation-for="AddressOfSender"></span>
    </div>
    <div class="mb-3 mt-3">
        <label asp-for="RecipientCity" class="form-label">Recipient's City:<span class="text-danger">*</span></label>
        <input type="text" class="form-control" asp-for="RecipientCity" placeholder="Enter city">
        <span class="text-danger" asp-validation-for="RecipientCity"></span>
    </div>
    <div class="mb-3 mt-3">
        <label asp-for="RecipientAddress" class="form-label">Recipient's Address:<span class="text-danger">*</span></label>
        <input type="text" class="form-control" asp-for="RecipientAddress" placeholder="Enter address">
        <span class="text-danger" asp-validation-for="RecipientAddress"></span>
    </div>
    <div class="mb-3 mt-3">
        <label asp-for="CargoWeight" class="form-label">Cargo weight (kg):<span class="text-danger">*</span></label>
        <input type="number" step="0.01" class="form-control" asp-for="CargoWeight" placeholder="Enter weight (kg)">
        <span class="text-danger" asp-validation-for="CargoWeight"></span>
    </div>
    <div class="mb-3 mt-3">
        <label asp-for="ReceiptDate" class="form-label">Receipt Date:<span class="text-danger">*</span></label>
        <input type="date" class="form-control" asp-for="ReceiptDate" placeholder="Enter date">
        <span class="text-danger" asp-validation-for="ReceiptDate"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

