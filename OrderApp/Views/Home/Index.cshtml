@model List<Order>
<div class="text-center">
    <h1 class="display-4">Тестовое задание</h1>
</div>
<div class="container mt-5">
    <div class="row">
        <p class="col">Order list:</p>
        <a class="col-2 btn btn-primary" asp-action="Add">Add order</a>
    </div>
    
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Order Id</th>
            <th>Sender's city</th>
            <th>Sender's Address</th>
            <th>Recipient's city</th>
            <th>Recipient's Address</th>
            <th>Cargo weight</th>
            <th>Date of receipt</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td><span style="font-weight: bolder">There is no order history</span></td>
            </tr>

        }
        @foreach (var item in @Model)
        {
            <tr>
                <td><a asp-controller="Home" asp-action="OrderDescription" asp-route-orderId="@item.Id">@item.Id</a></td>
                <td>@item.CityOfSender</td>
                <td>@item.AddressOfSender</td>
                <td>@item.RecipientCity</td>
                <td>@item.RecipientAddress</td>
                <td>@item.CargoWeight</td>
                <td>@item.ReceiptDate.ToShortDateString()</td>
            </tr>
        }
        </tbody>
    </table>
</div>